{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "isolatedModules": true,
    "moduleResolution": "node",
    // "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"]
}
